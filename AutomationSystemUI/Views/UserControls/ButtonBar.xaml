<UserControl x:Class="AutomationSystemUI.Views.UserControls.ButtonBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutomationSystemUI.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="1000">
    <Grid Grid.Row="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="1"
                Command="{Binding ShowAddObjectWindowCommand}"
                Content="Add Object" 
                Margin="5"/>
        <Button Command="{Binding ShowEditObjectWindowCommand}"
                Grid.Column="2"            
                Content="Edit Object" 
                Margin="5"/>
        <Button Grid.Column="3" 
                Content="Delete Object" 
                Command="{Binding DeleteObjectCommand}"
                Margin="5"/>
        <TextBlock/>
    </Grid>
</UserControl>
